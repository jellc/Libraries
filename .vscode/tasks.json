{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile and run",
            "type": "shell",
            "command": "./${fileBasenameNoExtension}",
            "options": {
                "cwd": "${fileDirname}"
            },
            "args": [],
            "dependsOn": [
                "g++.exe build active file with options",
            ],
            "problemMatcher": [],
        },
        {
            "type": "shell",
            "label": "g++.exe build active file with options",
            "command": [
                "g++",
            ],
            "args": [
                "-std=c++14",
                "-mtune=native",
                "-march=native",
                "-Wall",
                "-g",
                "${file}",
                "-o",
                "${fileBasenameNoExtension}",
            ],
            "options": {
                "cwd": "${fileDirname}",
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "stdin_path",
            "default": "CON",
            "description": "enter stdin_path",
        },
        {
            "type": "pickString",
            "id": "stdout_path",
            "options": [
                "CON",
                "stdout"
            ],
            "default": "CON",
            "description": "enter stdout_path",
        },
        {
            "type": "pickString",
            "id": "stderr_path",
            "options": [
                "CON",
                "stderr"
            ],
            "default": "stderr",
            "description": "enter stderr_path",
        },
    ]
}